<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--验证码-->
    <declare-styleable name="VerifCodeView">
        <attr name="verify_Text_color" format="color"></attr>
        <attr name="verify_text_size" format="dimension"></attr>
        <attr name="verify_text_bg" format="color"></attr>
        <attr name="verify_text_code_length" format="integer"></attr>
    </declare-styleable>

    <!--太极图-->
    <declare-styleable name="TaijiDiagram">
        <attr name="taiji_left_color" format="color"></attr>
        <attr name="taiji_right_color" format="color"></attr>
        <attr name="taiji_radius" format="integer"></attr>
        <attr name="taiji_bg" format="color"></attr>
    </declare-styleable>

    <!--饼状图-->
    <declare-styleable name="PieChatView">
        <attr name="pie_color_1" format="color"></attr>


    </declare-styleable>

    <!--网格图-->
    <declare-styleable name="MyGridView">
        <attr name="grid_line_color" format="color"></attr>
        <attr name="grid_line_width" format="dimension"></attr>
        <attr name="gird_text_color" format="color"></attr>
        <attr name="gird_text_size" format="dimension"></attr>
        <attr name="gird_over_color" format="color"></attr>
        <attr name="grid_over_alpha" format="integer"></attr>
    </declare-styleable>

    <!--泡泡窗-->
    <declare-styleable name="PaoPao">
        <attr name="paopao_text" format="string"></attr>
        <attr name="paopao_text_size" format="dimension"></attr>
        <attr name="paopao_text_color" format="color"></attr>
        <attr name="paopao_color" format="color"></attr>
    </declare-styleable>

    <!--波浪-->
    <declare-styleable name="WaveView">
        <attr name="wave_bg_color" format="color"></attr>
        <attr name="wave_width" format="integer"></attr>
        <attr name="wave_count" format="integer"></attr>
        <attr name="wave_text" format="string"></attr>
        <attr name="wave_text_color" format="color"></attr>
        <attr name="wave_text_size" format="dimension"></attr>
    </declare-styleable>

    <!--仪表盘-->
    <declare-styleable name="BoardView">
        <attr name="board_text_color" format="color"></attr>
        <attr name="board_text_size" format="dimension"></attr>
        <attr name="board_pointer_color" format="color"></attr>
        <attr name="board_pointer_stroke" format="dimension"></attr>
        <attr name="board_pointer_count" format="integer"></attr>
        <attr name="board_bg" format="color"></attr>
        <attr name="board_in_circle_radius" format="dimension"></attr>
        <attr name="board_in_circle_stroke" format="dimension"></attr>
        <attr name="board_in_circle_color" format="color"></attr>
    </declare-styleable>

</resources>