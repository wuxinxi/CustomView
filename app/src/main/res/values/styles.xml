<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--验证码-->
    <style name="VerifyStyle">
        <item name="verify_Text_color">@color/colorGray</item>
        <item name="verify_text_size">16sp</item>
        <item name="verify_text_bg">@color/colorAccent</item>
        <item name="verify_text_code_length">6</item>
    </style>

    <!--太极图-->
    <style name="TaijiStyle">
        <item name="taiji_left_color">@color/colorBalck</item>
        <item name="taiji_right_color">@color/colorWhite</item>
        <item name="taiji_radius">250</item>
        <item name="taiji_bg">@null</item>
    </style>

    <!--网格-->
    <style name="MyGridViewStyle">
        <item name="grid_line_color">@color/colorAccent</item>
        <item name="grid_line_width">1dp</item>
        <item name="gird_text_color">@color/colorPrimary</item>
        <item name="gird_text_size">12sp</item>
        <item name="gird_over_color">@color/blue</item>
        <item name="grid_over_alpha">100</item>
    </style>

    <!--泡泡窗-->
    <style name="MypaoPaoStyle">
        <item name="paopao_text">@string/default_name</item>
        <item name="paopao_text_size">16sp</item>
        <item name="paopao_text_color">@color/colorWhite</item>
        <item name="paopao_color">@color/blue</item>
    </style>

    <!--波浪-->
    <style name="WaveStyle">
        <item name="wave_bg_color">@color/blue</item>
        <item name="wave_width">20</item>
        <item name="wave_count">10</item>
        <item name="wave_text">恭喜你中了一等奖!</item>
        <item name="wave_text_color">@color/colorWhite</item>
        <item name="wave_text_size">14sp</item>
    </style>
    <!--仪表盘-->
    <style name="MyBoardStyle">
        <item name="board_text_color">@color/colorBalck</item>
        <item name="board_text_size">14dp</item>
        <item name="board_pointer_color">@color/blue</item>
        <item name="board_pointer_stroke">3dp</item>
        <item name="board_pointer_count">20</item>
        <item name="board_bg">@color/colorGray</item>
        <item name="board_in_circle_radius">15dp</item>
        <item name="board_in_circle_stroke">10dp</item>
        <item name="board_in_circle_color">@color/gray</item>
    </style>
</resources>
